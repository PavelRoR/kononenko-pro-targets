-var full_1 = '7 900р.';
-var full_2 = '20 900р.';

-var sale_1 = '1 000р.';
-var sale_2 = '2 000р.';

-var today_1 = '6 900р.';
-var today_2 = '18 900р.';

-var link_1 = 'https://shop.mastervision.su/?r=ordering/cart/as1&id=3763&clean=true&lg=ru';
-var link_2 = 'https://shop.mastervision.su/?r=ordering/cart/as1&id=3765&clean=true&lg=ru';

section#prices
	.container
		+gt('general-title-light','Выберите свой вариант участия')
		.packets
			.row
				.col-md-6.col-sm-6
					.packet
						.packet-head
							h4.packet-head-title Пакет
								span Стандарт
						.packet-body
							h5.packet-body-title 5 занятий
							p.more-button(data-toggle="modal" data-target="#modal") подробнее
						.packet-footer
							p.cost.cost-full Стоимость:
								span= full_1
							p.cost.cost-sale Скидка:
								span#sale-1= sale_1
							p.cost.cost-today Стоимость сегодня:
								span#today-1= today_1
							a.button.button-cost(href= link_1 target="_blank")#link-1 Выбрать
				.col-md-6.col-sm-6
					.packet
						.packet-head
							h4.packet-head-title пакет
								span VIP
						.packet-body
							h5.packet-body-title 5 занятий
							p.more-button(data-toggle="modal" data-target="#modal") подробнее
							ul.packet-body-list
								li индивидуальное сопровождение
								li все вопросы-ответы в личку
								li 4 получасовых консультации
						.packet-footer
							p.cost.cost-full Стоимость:
								span= full_2
							p.cost.cost-sale Скидка:
								span#sale-2= sale_2
							p.cost.cost-today Стоимость сегодня:
								span#today-2= today_2
							a.button.button-cost(href= link_2 target="_blank")#link-2 Выбрать
		.timer.hide
			h4.timer-title До уменьшения скидки:
			.clock